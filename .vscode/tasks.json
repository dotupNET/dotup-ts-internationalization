{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build typescript",
      "type": "shell",
      "command": "tsc",
      "problemMatcher": "$tsc",
      "args": [
        "-p",
        "\"${workspaceFolder}/tsconfig.json\""
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": "cleanup"
    },
    {
      "label": "cleanup",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "clean-dist"
      ]
    },
    {
      "label": "test file",
      "type": "shell",
      "command": "npm",
      "args": [
        "run",
        "test",
        "${file}"
      ],
      "group": "test",
      "problemMatcher": "$tsc"
    },
    {
      "type": "grunt",
      "task": "tslint",
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "type": "npm",
      "script": "release",
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "type": "grunt",
      "task": "release",
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "type": "grunt",
      "task": "publish",
      "problemMatcher": [
        "$tsc"
      ]
    },
    {
      "type": "gulp",
      "task": "project-build",
      "problemMatcher": [
        "$tsc"
      ]
    }
  ]
}